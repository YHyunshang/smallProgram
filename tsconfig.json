{
  "compilerOptions": {
    "jsx": "react-native",
    "lib": ["es6", "es2017", "es2018.promise"],
    "downlevelIteration": true,
    "experimentalDecorators": true,
    "baseUrl": ".",
    "paths": {
      "@utils": ["./src/utils"],
      "@utils/*": ["./src/utils/*"],
      "@services": ["./src/services"],
      "@services/*": ["./src/services/*"],
      "@components": ["./src/components"],
      "@components/*": ["./src/components/*"],
      "@img": ["./src/assets/imgs"],
      "@const/*": ["./src/constants/*"],
      "@theme": ["./src/theme"],
      "@common/*": ["./src/common/*"],
      "@HOC/*": ["./src/HOC/*"]
    }
  }
}
